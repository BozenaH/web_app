{% extends 'base.html.twig' %}

{% block title %}


{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>
<div class="example-wrapper">

    {% set basket = app.session.get('basket') %}

{% if basket is null %}
    <p> You have no electives in your basket </p>

   {# {{ dump(app.session.get('basket')) }}#}

    {% else %}
        <ul>
            {% for course in basket %}
                <li>
                    <hr>
                    {{ course.id }} :: {{ course.description }} :: {{ course.price }}

                        <a href="{{ path('basket_delete',{ 'id': course.id }) }}">(remove)</a>
                </li>
            {% endfor %}
        </ul>
{% endif %}

        <p>
            <a href="{{ path('basket_clear') }}">CLEAR all items in basket</a>
        </p>
    <br>
        <p>
            <a href="{{ path('course_index') }}">Continue shopping</a>
        </p>

    {% endblock %}
{% endblock %}




